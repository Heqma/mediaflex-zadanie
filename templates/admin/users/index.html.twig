{% extends 'admin/index.html.twig' %}

{% block title %}Admin - Lista użytkowników{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col">Rola</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.email }}</td>
                        <td>{{ user.getRole().getName() }}</td>
                        <td>
                            <a href="{{ path('admin_user_read', {'id': user.id})  }}" title="Zobacz"><i class="bi bi-search"></i></a>
                            <a href="{{ path('admin_user_update', {'id': user.id})  }}" title="Edytuj"><i class="bi bi-pencil-fill"></i></a>
                            <a href="{{ path('admin_user_delete', {'id': user.id})  }}" title="Usuń"><i class="bi bi-trash3-fill"></i></a>                        
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" href="{{ path('admin_user_create') }}" role="button">Dodaj Użytkownika</a>
        </div>
    </div>
</div>

{% endblock %}
